<h1 style="text-align:center">All Cars</h1>
<div class="cards">
  <% @cars.each do |car| %>
    <div class="card-trip">
      <%= link_to car_path(car) do %>
        <%= cl_image_tag("#{car.photo.key}", crop: :fill) %>
      <% end %>
      <div class="card-trip-infos">
        <div>
          <h2><%= car.make %> <%= car.model%></h2>
          <p><%= car.year%></p>
        </div>
        <div class="card-trip-infos-right-side">
        <h2 class="card-trip-pricing">Â¥<%= car.price %>/day</h2>
        <% if car.user.photo.attached? %>
        <div class="card-trip-avatar">
        <%= cl_image_tag(car.user.photo.key, crop: :thumb, gravity: :face, class: "avatar-bordered" )%>
        <% else %>
        <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="avatar-bordered" />
        <% end %>
        </div>
      </div>
      </div>
    </div>
  <% end %>
</div>
