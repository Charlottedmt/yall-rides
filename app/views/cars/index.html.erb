<br>
<h1 style="text-align:center">All Cars</h1>
<br>
<div class="index-page">
  <div class="cards">
    <% @cars.each do |car| %>
      <div class="card-trip">
        <%= link_to car_path(car) do %>
          <img src="https://source.unsplash.com/collection/2328095/1600x900" />
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2><%= car.make %> <%= car.model%></h2>
            <p><%= car.year%></p>
          </div>
          <h2 class="card-trip-pricing">Â¥<%= car.price %></h2>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="avatar-bordered" />
        </div>
      </div>
    <% end %>
  </div>
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%=ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
