<h2 class="mt-3 mb-3" style="text-align:center">My Dashboard</h2>
<%# This is the profile section. Delete if we don't need it any more. %>
<div class="my-profile">
  <div class="renter-info">
    <h3 class="" >My Profile</h3>
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-large", alt: "avatar-large" %>
    <p>Marcus</p>
    <p>Member since 2018</p>
    <%= link_to "Add car", new_car_path, class: "btn btn-ghost" %>
  </div>
</div>
  <!-- </div> -->
<div class="tabs">
  <ul class="nav nav-tabs" id="dashboardTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="lend-tab" data-toggle="tab" href="#lend" role="tab" aria-controls="lend" aria-selected="true">Lend</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="borrow-tab" data-toggle="tab" href="#borrow" role="tab" aria-controls="borrow" aria-selected="false">Borrow</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Salsa</a>
    </li>
  </ul>
</div>

<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="lend" role="tabpanel" aria-labelledby="lend-tab">
    <div class="cards">
      <% @cars.each do |car| %>
        <div class="card-product">
        <%= cl_image_tag(car.photo.key, crop: :thumb, gravity: :face, class: "avatar-large", alt: "avatar-large") %>
          <div class="card-product-infos">
            <p><%= car.make %></p>
            <p><%= car.model %></p>
            <p><%= car.description %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="tab-pane fade" id="borrow" role="tabpanel" aria-labelledby="borrow-tab">
        <div class="cards">
      <% @bookings.each do |booking| %>
        <div class="card-product">
        <%= cl_image_tag(booking.car.photo.key, crop: :thumb, gravity: :face, class: "avatar-large", alt: "avatar-large") %>
          <div class="card-product-infos">
            <p><%= booking.car.make %></p>
            <p><%= booking.car.model %></p>
            <p>Product description with <strong>relevant info</strong> only.</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
    <%# Content goes here!!!!!!! %>
  </div>
</div>
