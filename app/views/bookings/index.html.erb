<h2 class="mt-3 mb-3" style="text-align:center">My Dashboard</h2>
<%# This is the profile section. Delete if we don't need it any more. %>
<div class="my-profile">
  <div class="renter-info">
    <h3 class="" >My Profile</h3>
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-large", alt: "avatar-large" %>
    <p>Marcus</p>
    <p>Member since 2018</p>
  </div>
</div>
  <!-- </div> -->
<ul class="nav nav-tabs" id="dashboardTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">My Cars</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">My Bookings</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Salsa</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
    <div class="cards">
      <% @bookings.each do |booking| %>
        <div class="card-product">
        <%= cl_image_tag(booking.car.photo.key, crop: :thumb, gravity: :face, class: "avatar-large", alt: "avatar-large") %>
          <div class="card-product-infos">
            <p><%= booking.car.make %></p>
            <p><%= booking.car.model %></p>
            <p>Product description with <strong>relevant info</strong> only.</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
    <%# Content goes here!!!!!!! %>
  </div>
  <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
    <%# Content goes here!!!!!!! %>
  </div>
</div>
